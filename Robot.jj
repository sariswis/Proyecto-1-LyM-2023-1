			}
		} else {
			throw new Error("The variable " + token.image + " is not defined\nLine: " + token.beginLine + " Column: " + token.beginColumn);
		}
	}

	public static void addFunction(Token token){
		String image = token.image.toLowerCase();
		functions.put(image, "");
	}

